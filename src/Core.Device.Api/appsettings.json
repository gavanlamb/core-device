{
  "AllowedHosts": "*",
  "DeviceDatabaseSettings": {
    "DeviceCollectionName": "Devices",
    "TypeCollectionName": "Types",
    "DatabaseName": "Device"
  },
  "Serilog": {
    "Using": [ 
      "Serilog.Sinks.GoogleCloudLogging" 
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext"
    ],
    "WriteTo": [
      {
        "Name": "GoogleCloudLogging",
        "Args": {
          "resourceType": "cloud_run_revision",
          "serviceName": "core-devices-api",
          "serviceVersion": "1.0.0",
          "useSourceContextAsLogName": true,
          "useJsonOutput": true
        }
      }
    ]
  }
}
